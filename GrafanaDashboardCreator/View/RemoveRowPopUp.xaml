<Window x:Class="GrafanaDashboardCreator.View.RemoveRowPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafanaDashboardCreator.View"
        mc:Ignorable="d"
        Title="RemoveRowPopUp" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Select dashboard and row" HorizontalAlignment="Center" Margin="0,0,0,75" VerticalAlignment="Center"/>
        <Button x:Name="RemoveRow" Content="Remove Selected Row" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Center" Click="RemoveRow_Click"/>
        <ComboBox x:Name="DashboardSelectBox" HorizontalAlignment="Center" Margin="0,0,130,0" VerticalAlignment="Center" Width="120" SelectionChanged="DashboardSelectBox_SelectionChanged"/>
        <ComboBox x:Name="RowSelectBox" HorizontalAlignment="Center" Margin="130,0,0,0" VerticalAlignment="Center" Width="120"/>
    </Grid>
</Window>
