<Window x:Class="GrafanaDashboardCreator.View.PopUps.SelectDashboardPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafanaDashboardCreator.View.PopUps"
        mc:Ignorable="d"
        Title="SelectDashboardPopUp" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Select dashboard for Json-export" HorizontalAlignment="Center" Margin="0,0,0,75" VerticalAlignment="Center"/>
        <Button x:Name="SelectDashboardButton" Content="Select Dashboard" HorizontalAlignment="Center" Margin="150,75,0,0" VerticalAlignment="Center" Click="SelectDashboardButton_Click"/>
        <ComboBox x:Name="DashboardSelectBox" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="120"/>
        <Button Content="Select All Dashboards" HorizontalAlignment="Center" Margin="0,75,125,0" VerticalAlignment="Center" Click="SelectAllDashboardsButton_OnClick"/>
    </Grid>
</Window>
