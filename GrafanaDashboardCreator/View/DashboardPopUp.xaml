<Window x:Class="GrafanaDashboardCreator.View.DashboardPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafanaDashboardCreator.View"
        mc:Ignorable="d"
        Title="Create new dashboard" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="DashboardNameBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" KeyDown="DashboardNameBox_KeyDown"/>
        <Button Content="Create dashboard" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Click="CreateDashboardButton_OnClick"/>
        <Label Content="Enter a name for the new dashboard" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
