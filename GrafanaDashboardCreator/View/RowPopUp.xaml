<Window x:Class="GrafanaDashboardCreator.View.RowPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafanaDashboardCreator.View"
        mc:Ignorable="d"
        Title="RowPopUp" Height="180" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="RowNameBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" Margin="0,40,0,0" KeyDown="RowNameBox_KeyDown"/>
        <Button Content="Create row" HorizontalAlignment="Center" Margin="0,100,0,0" Click="CreateRowButton_OnClick" Height="20" VerticalAlignment="Center"/>
        <Label Content="Enter a name for the new row" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center"/>
        <ComboBox x:Name="SelectedDashboardBox" HorizontalAlignment="Center" Margin="0,0,0,25" VerticalAlignment="Center" Width="120"/>
    </Grid>
</Window>
